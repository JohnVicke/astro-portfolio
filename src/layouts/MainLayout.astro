---
import "@fontsource/fira-code";
import { BottomNavigation } from "../components/BottomNavigation";
export interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <script is:inline>
    const darkMode = localStorage.getItem("darkMode");
    const theme = darkMode === "true" ? "dark" : "light";
    document.querySelector("html").className = theme;
  </script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
  <meta name="generator" content={Astro.generator} />
  <meta
    name="description"
    content="Viktor Malmedal personal website and portfolio"
  />
  <title>{title}</title>

  <body
    class="bg-neutral-200 dark:bg-neutral-800 h-screen w-screen text-slate-100"
  >
    <main class="max-w-screen-md m-auto p-4 pt-24">
      <slot />
      <BottomNavigation activeRoute={href} client:idle />
    </main>
    <style is:global>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
      body {
        font-family: "Fira Code", monospace;
      }
    </style>
  </body>
</html>
